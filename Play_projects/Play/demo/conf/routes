


GET     /tasks                  controllers.TaskController.index()
POST    /tasks                  controllers.TaskController.create()
POST    /tasks/:id/toggle       controllers.TaskController.toggleTask(id: Long)
POST    /tasks/:id/delete       controllers.TaskController.deleteTask(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
